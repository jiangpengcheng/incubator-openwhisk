include classpath("application.conf")

whisk {
  couchdb {
    protocol = "{{ db.protocol }}"
    host     = "{{ db.host }}"
    port     = "{{ db.port }}"
    username = "{{ db.credentials.admin.user }}"
    password = "{{ db.credentials.admin.pass }}"
    provider = "{{ db.provider }}"
    databases {
      WhiskAuth       = "{{ db.whisk.auth }}"
      WhiskEntity     = "{{ db.whisk.actions }}"
      WhiskActivation = "{{ db.whisk.activations }}"
    }
  }
  {% if db.backend == 'MongoDB' %}
  mongodb {
    host        = "{{ db.host }}"
    port        = "{{ db.port }}"
    database    = "{{ db.mongodb.database }}"
    username    = "{{ db.credentials.admin.user }}"
    password    = "{{ db.credentials.admin.pass }}"
    collections {
      WhiskAuth       = "{{ db.whisk.auth }}"
      WhiskEntity     = "{{ db.whisk.actions }}"
      WhiskActivation = "{{ db.whisk.activations }}"
    }
  }
  
  spi {
    ArtifactStoreProvider = whisk.core.database.mongodb.MongoDBArtifactStoreProvider
  }
  {% endif %}
}
